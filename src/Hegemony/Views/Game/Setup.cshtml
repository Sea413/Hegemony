<head>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="~/js/Site.js" type="text/javascript"></script>
</head>

@model Hegemony.Models.Nation

@using System.Security.Claims
<h1>Nation Creation Menu</h1>



<h4>Forge a new Nation</h4>

@using (Html.BeginForm())
            {
    <p>
        Nation Name
        @Html.TextBoxFor(model => model.Name)
    </p>

    <p>
        Army Doctrine
        <div class="ArmyId1"> @Html.DropDownList("ArmyId")</div>
    </p>

    <p>
        Economic Policy
        <div class="EconomyId1">@Html.DropDownList("EconomyId")</div>
    </p>

    <p>
        Government Tradition
        <div class="GovernmentId1"> @Html.DropDownList("GovernmentId")</div>
    </p>

    <p>
        Technological Ability
        <div class="TechnologyId1"> @Html.DropDownList("TechnologyId")</div>
    </p>

    <p>
        Geographic Layout
        <div class="GeographyId1">@Html.DropDownList("GeographyId")</div>
    </p>

    <input type="submit" value="Setup" />

}
<h1>Descriptions!</h1>

<h3>Army Description: </h3>
<div class="ArmyResults"></div>
<h3>Economy Description: </h3>
<div class="EconomyResults"></div>
<h3>Government Description: </h3>
<div class="GovernmentResults"></div>
<h3>Technology Description: </h3>
<div class="TechnologyResults"></div>
<h3>Geography Description: </h3>
<div class="GeographyResults"></div>


<div id="statOutput">
    <div class="row">
        <div class="col-xs-6" title="Total number of troops at your command!">
            <input type="hidden" name="input_hp" id="input_army" value="1000">
            <span>Army Size: <span><span id="aSizeOutput">1000</span><span>
        </div>
        <div class="col-xs-6" title="resource for performing magic attacks">
            <span>Capital: <span><span id="capitalOutput">1000</span><span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
            <span>Natural Resources: <span> <span id="populationOutput">1000</span>
        </div>
        <div class="col-xs-2">
            <span>Happiness Value: <span><span id="happinessOutput">1000</span>
        </div>
        <div class="col-xs-2">
            <span>Technology Value: <span><span id="technologyOutput">1000</span>
        </div>
    </div>
</div>

<p>@Html.ActionLink("Home", "Index")</p>