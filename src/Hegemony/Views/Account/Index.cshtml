@using System.Security.Claims

<h2>Start a New  Nation</h2>
<hr />
@if (User.IsSignedIn())
{
    <p>Greetings @User.GetUserName()!</p>
    <p>@Html.ActionLink("New Nation", "Register")</p>
}
else
{
    <p>@Html.ActionLink("New Nation", "Register")</p>
    <p>@Html.ActionLink("Log into your Nation!", "Login")</p>
}
@if (User.IsSignedIn())
{
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}